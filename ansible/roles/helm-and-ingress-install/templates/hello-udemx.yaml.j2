apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-udemx
  namespace: udemx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hello-udemx
  template:
    metadata:
      labels:
        app: hello-udemx
    spec:
      containers:
      - name: nginx
        image: nginx:alpine
        ports:
        - containerPort: 80
        volumeMounts:
        - name: html
          mountPath: /usr/share/nginx/html
      volumes:
      - name: html
        configMap:
          name: hello-udemx-html
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: hello-udemx-html
  namespace: udemx
data:
  index.html: |
    <!DOCTYPE html>
    <html>
    <head>
        <title>Hello UDEMX</title>
    </head>
    <body>
        <h1>Hello UDEMX!</h1>
    </body>
    </html>
---
apiVersion: v1
kind: Service
metadata:
  name: hello-udemx-service
  namespace: udemx
spec:
  selector:
    app: hello-udemx
  ports:
  - port: 80
    targetPort: 80
