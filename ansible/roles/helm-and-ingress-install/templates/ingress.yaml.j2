apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: main-ingress
  namespace: udemx
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  ingressClassName: nginx
  tls:
  - hosts:
    - myapp.udemx.local
    secretName: tls-secret
  rules:
  - host: myapp.udemx.local
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: hello-udemx-service
            port:
              number: 80
      - path: /app
        pathType: Prefix
        backend:
          service:
            name: incident-logger-frontend
            port:
              number: 3000
